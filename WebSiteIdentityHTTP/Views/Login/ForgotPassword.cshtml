@model WebSiteIdentityHTTP.Models.ForgotPasswordViewModel

@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ForgotPassword</h2>

<hr />


<form asp-action="ForgotPassword">
    <div class="container">

        <div class="card bg-success text-white text-center">
            <div class="card-body">
                <div class="col-lg-4 ">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <h1 class="h3 mb-3 font-weight-normal">Enter Your Email Address</h1>
                    


                    <div class="form-group">
                        <label asp-for="Email" class="sr-only">Emial</label>
                        <input asp-for="Email" type="Email" class="form-control" placeholder="Email" required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Send</button>
                </div>
            </div>
        </div>
    </div>

</form>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
